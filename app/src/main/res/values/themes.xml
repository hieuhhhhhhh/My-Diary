<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/background_color</item>
        <!-- Set global text color -->
        <item name="android:textColor">@color/foreground_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:statusBarColor">@color/foreground_color</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <item name="colorPrimary">@color/dark_middleground</item>

    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/foreground_color</item>
        <item name="itemTextColor">@color/foreground_color</item>
        <item name="android:background">@color/middleground</item>
    </style>
</resources>